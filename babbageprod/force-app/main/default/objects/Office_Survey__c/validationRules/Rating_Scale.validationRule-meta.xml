<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rating_Scale</fullName>
    <active>true</active>
    <errorConditionFormula>OR(Rating__c &gt; 5, Rating__c &lt; 1)</errorConditionFormula>
    <errorDisplayField>Rating__c</errorDisplayField>
    <errorMessage>The Rating must be given on a scale from 1 to 5.</errorMessage>
</ValidationRule>
